.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{data: {toggle: 'collapse', target: '.nav-collapse'}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{href: '/admin'} moneymaker
      .nav-collapse
        %ul.nav
          - %w(users bank_levels settings).each do |controller|
            %li{class: ("active" if params[:controller] == "admin/#{controller}")}
              %a{href: url_for(controller: controller)}
                = t "#{controller[0..-2]}.menu_caption"
          %li.dropdown
            %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
              = t 'common.content'
              %b.caret
            %ul.dropdown-menu
              - %w(greetings bank_operations atms cash_desks items item_types rooms room_types clients).each do |controller|
                %li{class: ("active" if params[:controller] == "admin/#{controller}")}
                  %a{href: url_for(controller: controller)}
                    = t "#{controller[0..-2]}.menu_caption"
          - %w( swfclients flash_libs).each do |controller|
            %li{class: ("active" if params[:controller] == "admin/#{controller}")}
              %a{href: url_for(controller: controller)}
                = t "#{controller[0..-2]}.menu_caption"
