.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{data: {toggle: 'collapse', target: '.nav-collapse'}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{href: '/admin'} moneymaker
      .nav-collapse
        %ul.nav
          - %w(users settings).each do |controller|
            %li{class: ("active" if params[:controller] == "admin/#{controller}")}
              %a{href: url_for(controller: controller)}
                = t "#{controller}.menu_caption"
          %li.dropdown
            %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
              = t 'common.content'
              %b.caret
            %ul.dropdown-menu
              - %w(greetings bank_operations bank_levels atms cash_desks items item_types rooms room_types clients quests quest_characters event_handlers branches).each do |controller|
                %li{class: ("active" if params[:controller] == "admin/#{controller}")}
                  %a{href: url_for(controller: controller)}
                    = t "#{controller}.menu_caption"
          - %w( swfclients flash_libs).each do |controller|
            %li{class: ("active" if params[:controller] == "admin/#{controller}")}
              %a{href: url_for(controller: controller)}
                = t "#{controller}.menu_caption"
        - if admin_signed_in?
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
                = current_admin.email
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{href: destroy_admin_session_path}= t 'common.sign_out'
