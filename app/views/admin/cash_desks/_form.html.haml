= simple_form_for [:admin, resource], html: {class: 'form-horizontal'} do |f|
  %legend
    = t("common.#{params[:action]}") + ' ' + t(resource_class.name.pluralize.underscore + '.caption').mb_chars.downcase
    = "# #{resource.id}" unless resource.new_record?
  = render partial: 'shared/item_form', locals: {f: f}
  .row-fluid
    .span6
      %legend= t 'common.operations'
      = f.input :operations, collection: BankOperation.all, input_html: { multiple: true }
    .span6
      %legend= t 'common.additional_fields'
      = f.input :service_speed, as: :integer
      = f.input :capacity, as: :integer
  .control-group
    .controls
      %a.btn{href: collection_url}
        %i.icon-arrow-left
        Назад
      %button.btn.btn-primary
        %i.icon-ok.icon-white
        Сохранить
